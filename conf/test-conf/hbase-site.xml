<configuration>
<property>
            <name>hbase.rootdir</name>
            <value>hdfs://new-namenode:9000/hbase</value>
    </property>
      <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
        <description>The mode the cluster will be in. Possible values are
                false: standalone and pseudo-distributed setups with managed Zookeeper
                true: fully-distributed with unmanaged Zookeeper Quorum (see hbase-env.sh)
        </description>
    </property>
    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>new-namenode,new-datanode2,new-datanode3</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.dataDir</name>
        <value>/home/pplive/platform/hbase/zookeeper</value>
    </property>
    <property>
        <name>hbase.master.port</name>
        <value>60000</value>
        <description>The port master should bind to.</description>
    </property>
    <property>
        <name>hbase.master.info.port</name>
        <value>60010</value>
        <description>The port for the hbase master web UI Set to -1 if you do not want the info server to run.</description>
    </property>
</configuration>
